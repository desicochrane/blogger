<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{.Doc.FrontMatter.Title}}</title>
  <link rel="stylesheet" href="{{ absurl "css/blog.css" }}">

</head>
<body>
<div class="header">
  <div class="container">
    <a href="{{ absurl "/" }}">des.io</a>
  </div>
</div>

<div class="content">
  <div class="container">
    {{.Doc.Content}}
  </div>

  <div class="container" style="margin-top: 40px;">
      <div id="disqus_thread"></div>
  </div>

  <script>
    var disqus_config = function () {
      this.page.url = "{{ absurl .Doc.URL }}";
      this.page.identifier = "{{.Doc.URL}}";
    };
    (function() { // DON'T EDIT BELOW THIS LINE
      var d = document, s = d.createElement('script');
      s.src = 'https://des-io.disqus.com/embed.js';
      s.setAttribute('data-timestamp', +new Date());
      (d.head || d.body).appendChild(s);
    })();
  </script>
</div>

<div class="footer">
  <div class="container">
    <a href="https://github.com/desicochrane">github</a>
  </div>
</div>


<script src="{{ absurl "js/blog.js" }}"></script>
</body>
</html>
